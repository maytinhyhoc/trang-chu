<script>
document.addEventListener('DOMContentLoaded', function() {
// --- LAYOUT ADJUSTMENT ---
const header = document.querySelector('header');
const body = document.body;
function adjustBodyPadding() {
if (header && getComputedStyle(header).display !== 'none') {
body.style.paddingTop = header.offsetHeight + 'px';
} else { body.style.paddingTop = '0px'; }
}
adjustBodyPadding();
window.addEventListener('resize', adjustBodyPadding);

    document.querySelectorAll('input').forEach(input => {
        input.addEventListener('dblclick', () => { input.value = ''; });
    });

    // --- MODAL LOGIC ---
    const modal = document.getElementById('notification-modal');
    const modalMessage = document.getElementById('modal-message');
    const closeModalBtn = document.getElementById('close-modal-btn');

    window.showModal = function(message) {
        modalMessage.textContent = message;
        modal.classList.remove('hidden');
    }

    function hideModal() {
        modal.classList.add('hidden');
    }

    closeModalBtn.addEventListener('click', hideModal);
    modal.addEventListener('click', function(e) {
        if (e.target === modal.querySelector('.absolute')) {
            hideModal();
        }
    });

    // --- SOFA CALCULATION LOGIC ---
    const form = document.getElementById('tool-form');
    const resultContainer = document.getElementById('result-container');
    const mainResult = document.getElementById('main-result');
    const subResult = document.getElementById('sub-result');
    const mortalityResult = document.getElementById('mortality-result');
    const clearBtn = document.getElementById('clearBtn');

    form.addEventListener('submit', function(e) {
        e.preventDefault();
        
        // 1. VALIDATION
        const ids = ['respiration', 'coagulation', 'liver', 'cardiovascular', 'cns', 'renal'];
        const values = {};
        
        for (const id of ids) {
            const el = document.getElementById(id);
            if (!el.value || el.value === "") {
                showModal(`Vui lòng chọn thông tin cho mục: ${el.parentElement.querySelector('label').innerText.trim()}`);
                return;
            }
            values[id] = parseInt(el.value);
        }

        // 2. Calculation
        const totalScore = Object.values(values).reduce((a, b) => a + b, 0);

        // 3. Interpretation
        let interpretation = "";
        let mortality = "";

        if (totalScore >= 0 && totalScore <= 6) {
            interpretation = "Tiên lượng: Nguy cơ tử vong thấp";
            mortality = "Tỷ lệ tử vong ước tính: < 10%";
        } else if (totalScore >= 7 && totalScore <= 9) {
            interpretation = "Tiên lượng: Nguy cơ tử vong trung bình";
            mortality = "Tỷ lệ tử vong ước tính: ~ 15-20%";
        } else if (totalScore >= 10 && totalScore <= 12) {
            interpretation = "Tiên lượng: Nguy cơ tử vong cao";
            mortality = "Tỷ lệ tử vong ước tính: ~ 40-50%";
        } else if (totalScore >= 13 && totalScore <= 14) {
            interpretation = "Tiên lượng: Nguy cơ tử vong rất cao";
            mortality = "Tỷ lệ tử vong ước tính: ~ 50-60%";
        } else if (totalScore >= 15) {
            interpretation = "Tiên lượng: Cực kỳ nguy kịch";
            mortality = "Tỷ lệ tử vong ước tính: > 80%";
        }

        // 4. Show Result
        mainResult.textContent = totalScore;
        subResult.textContent = interpretation;
        mortalityResult.textContent = mortality;

        resultContainer.classList.remove('hidden');
        
        // Auto Scroll
        const headerHeight = document.querySelector('header')?.offsetHeight || 0;
        const targetPos = resultContainer.getBoundingClientRect().top + window.pageYOffset - headerHeight - 20;
        window.scrollTo({ top: targetPos, behavior: 'smooth' });
    });

    clearBtn.addEventListener('click', function() {
        form.reset();
        resultContainer.classList.add('hidden');
        mainResult.textContent = "--";
        // Reset select colors or classes if any were added
        document.querySelectorAll('select').forEach(select => select.selectedIndex = 0);
        window.scrollTo({ top: 0, behavior: 'smooth' });
    });
});
</script>
</body>
</html>
